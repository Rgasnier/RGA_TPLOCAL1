
﻿
@model TPLOCAL1.Models.InfoPerso

	<! DOCTYPE html>
<html>
	<head>
		<title>Formulaire</title>
        <link rel="stylesheet" href="~/resources/Form.css" />
	</head>

<body>
    @Html.Partial("_EnTête")
    @*<header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>*@
    
        <div>

        @Html.Partial("_Menu")


		@* Tableau Formulaire *@
            <form asp-action="SubmitForm" method="post">
                <table border="1">
				@* Ligne Titre*@
                    <tr>
                        <th colspan="2" style="text-align: center;">Informations personnelles</th>
                    </tr>

				@* Ligne Nom*@
                    <tr>
                        <td>Nom</td>
                        <td><input type="text" asp-for="Nom"  />
                            <span asp-validation-for="Nom" style="color:red"></span>
                        </td>
                    </tr>

                @* Ligne Prenom*@
                    <tr>
                        <td>Prénom</td>
                        <td><input type="text" asp-for="Prenom" />
                            <span asp-validation-for="Prenom" style="color:red"></span>
                        </td>
                    </tr>

                @* Ligne Genre*@
                    <tr>
                        <td>Sexe</td>
                        <td>
                            <select asp-for="Genre" >
                            <option value="Selectionner un sexe">Sélectionnez un sexe</option>
                                <option value="Homme">Homme</option>
                                <option value="Femme">Femme</option>
                                <option value="Autre">Autre</option>
                            </select>
                            <span asp-validation-for="Genre" style="color:red"></span>
                        </td>
                    </tr>

                @* Ligne Adresse*@
                    <tr>
                        <td>Adresse</td>
                        <td><input type="text" asp-for="Adresse"  />
                            <span asp-validation-for="Adresse" style="color:red"></span>
                        </td>
                    </tr>

                @* Ligne Code Postal*@
                    <tr>
                        <td>Code postal</td>
                        <td><input type="text" asp-for="CodePostal"  />
                            <span asp-validation-for="CodePostal" style="color:red"></span>
                        </td>
                    </tr>

                @* Ligne Ville*@
                    <tr>
                        <td>Ville</td>
                        <td><input type="text" asp-for="Ville" />
                        <span asp-validation-for="Ville" style="color:red"></span>
                        </td>
				    </tr>
                @* Ligne Couriel*@
				    <tr>
                    <td>Adresse mail</td>
                    <td><input type="text" asp-for="AdresseCouriel"/>
                            <span asp-validation-for="AdresseCouriel" style="color:red"></span>
                    </td>
                    </tr>
                </table>
            @* Tableau Avis *@
                <table border="1">
                @* Ligne Titre*@
                    <tr>
                        <th colspan="2" style="text-align: center;">Informations formation suivie</th>
                    </tr>

				@* Ligne Date de Début*@
                    <tr>
                        <td>Date début formation</td>
                    <td><input type="date" asp-for="DateDeDebut" />
                        <span asp-validation-for="DateDeDebut" style="color:red"></span>
                        </td>

                    </tr>

                @* Ligne Type de Formation*@
                    <tr>
                        <td>Formation suivie</td>
                        <td>
                            <select asp-for="TypeDeFormation" >
                            <option value="Sélectionnez une formation">Sélectionnez une formation</option>
                            <option value="Formation Cobol">Formation Cobol</option>
                            <option value="Formation Objet">Formation par objet</option>
                            <option value="Formation à double compétence">Formation à double compétence</option>
                            </select>
                        <span asp-validation-for="TypeDeFormation" style="color:red"></span>
                        </td>
                    </tr>
                </table>
                <table border="1">
                @* Ligne Titre*@
                    <tr>
                        <th colspan="2" style="text-align: center;">Avis sur la formation</th>
                    </tr>
                @* Ligne Cobol Formation*@
                <tr>
                    <td>Cobol Formation</td>
                    <td>
                        <input type="text" asp-for="CobolFormation" />
                        <span asp-validation-for="CobolFormation" style="color:red"></span>
                    </td>
                </tr>
                @* Ligne C# Formation*@
                <tr>
                    <td>C# Formation</td>
                    <td>
                        <input type="text" asp-for="CFormation" />
                        <span asp-validation-for="CFormation" style="color:red"></span>
                    </td>
                </tr>

                </table>

            @* Bouton D'Envoie*@
                <button type="submit">Envoyer</button>
            </form>
	    </div>
	</body>

	</html>