@model TPLOCAL1.Models.InfoPerso
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/resources/Form.css" />
    <title>Validation Formulaire</title>
</head>
<body>
    @Html.Partial("_EnTête")
    @*<header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Page de validation </h1>
    </header>*@
    @Html.Partial("_Menu")
    
    <section>
		@* Message de validation*@
        <p style="text-align: left;">Votre formulaire a bien été pris en compte</p>

		@* 1er Tableau de réponse valide*@
        <table border="1">
			@* Ligne Titre *@
            <tr>
                <th colspan="2" style="text-align: center;">Informations personnelles</th>
            </tr>

			@* Montre les réponses valides*@
            <tr>
                <td>Nom</td>
                <td>@Model.Nom</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>@Model.Prenom</td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>@Model.Genre</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@Model.Adresse</td>
            </tr>
            <tr>
                <td>Code postal</td>
                <td>@Model.CodePostal</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@Model.Ville</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.AdresseCouriel</td>
            </tr>
        </table>

		@* 2eme Tableau de réponse valide *@
        <table border="1">
            @* Ligne Titre *@
            <tr>
                <th colspan="2" style="text-align: center;">Informations formation suivie</th>
            </tr>

            <tr>
                <td>Date début formation</td>
                <td>@Model.DateDeDebut.ToString("dd/MM/yyyy")</td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>@Model.TypeDeFormation</td>
            </tr>
        </table>

		@* Montre les avis sur les 2 formation *@
        <table border="1">
            @* Ligne Titre *@
            <tr>
                <th colspan="2" style="text-align: center;">Avis sur la formation</th>
            </tr>

            <tr>
                <td>Avis sur la formation Cobol</td>
                <td>@Model.CobolFormation</td>
            </tr>
            <tr>
                <td>Avis sur la formation C#</td>
                <td>@Model.CFormation</td>
            </tr>
        </table>
    </section>
</body>

</html>